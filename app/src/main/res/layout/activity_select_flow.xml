<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:background="@color/home_page_background">


    <TableRow
        android:layout_marginBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:id="@+id/normal_flow"
            android:layout_width="0dp"
            android:layout_height="@dimen/tabrow_height"
            android:layout_weight="1"
            android:background="@drawable/drawable_button_consume"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:onClick="onClick">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home_consume"
                android:layout_marginBottom="@dimen/home_view_spaces"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/title_consume"
                android:textSize="20sp"
                android:textColor="@color/home_page_text_color"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/scan_pay_flow"
            android:layout_width="0dp"
            android:layout_height="@dimen/tabrow_height"
            android:layout_weight="1"
            android:background="@drawable/drawable_button_scanner"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:onClick="onClick">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_home_scanner"
                android:layout_marginBottom="@dimen/home_view_spaces"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/flow_scan_pay"
                android:textSize="20sp"
                android:textColor="@color/home_page_text_color"
                />
        </LinearLayout>
    </TableRow>

<TableRow
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/app_settings"
        android:layout_width="0dp"
        android:layout_height="@dimen/tabrow_height"
        android:layout_weight="1"
        android:background="@drawable/drawable_button_settings"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:onClick="onClick">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_settings"
            android:layout_marginBottom="@dimen/home_view_spaces"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_settings"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/home_page_text_color"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/system_settings"
        android:layout_width="0dp"
        android:layout_height="@dimen/tabrow_height"
        android:layout_weight="1"
        android:background="@drawable/drawable_button_sys_settings"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:clickable="true"
        android:onClick="onClick">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_sys_settings"
            android:layout_marginBottom="@dimen/home_view_spaces"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system_settings"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/home_page_text_color"
            />
    </LinearLayout>

</TableRow>

<TableRow
    android:layout_marginBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:id="@+id/version_info"
        android:layout_width="0dp"
        android:layout_height="@dimen/tabrow_height"
        android:layout_weight="1"
        android:background="@drawable/drawable_button_sys_info"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:onClick="onClick">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_sys_info"
            android:layout_marginBottom="@dimen/home_view_spaces"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system_informatin"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/home_page_text_color"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/production_inspection"
        android:layout_width="0dp"
        android:layout_height="@dimen/tabrow_height"
        android:layout_weight="1"
        android:background="@drawable/drawable_button_prod_test"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:clickable="true"
        android:onClick="onClick">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_prod_test"
            android:layout_marginBottom="@dimen/home_view_spaces"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/production_inspection"
            android:textColor="@color/home_page_text_color"
            android:textSize="20sp" />
    </LinearLayout>

</TableRow>

</TableLayout>

