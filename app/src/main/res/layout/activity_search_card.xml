<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_button_consume"
        android:gravity="center"
        android:padding="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/trad_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text=""></TextView>
        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text=""></TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_rf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:background="@drawable/drawable_button_consume"
            >
            <ImageView
                android:id="@+id/rf_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rf_card"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/rf_image"
                android:layout_centerVertical="true"
                android:paddingRight="0dp"
                android:textSize="20sp"
                android:text="Kama kadi ni aina ya RF, iweke juu kifaa hiki."/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_ic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:background="@drawable/drawable_button_consume">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ic_image"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:textSize="20sp"
                android:text="Kama kadi ni aina ya IC, ichomeke upande wa kulia wa kifaa."/>
            <ImageView
                android:id="@+id/ic_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_card"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_msr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:background="@drawable/drawable_button_consume">
            <ImageView
                android:id="@+id/mag_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msr_card"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/mag_image"
                android:layout_centerVertical="true"
                android:paddingRight="16dp"
                android:textSize="20sp"
                android:text="Kama hii kadi ina mkanda peke yake, ipitishe kwenye ki nafasi cha kisomeo"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>